#!/bin/sh

. ~/.profile

# Load common.igni with common tasks:
. /Shared/Igniters/common.igni


# Initialize service:
ignite \
    name="Dcollector" \
    action="${1:-status}" \
    start_cmd="'export SLEEP_SECONDS=2 && cd /Services/Dcollector && daemon -p /Services/Dcollector/service.pid -P /Services/Dcollector/service-supervisor.pid -H -t dcollector -o /Services/Dcollector/service.log /Services/Dcollector/bin/dcollector'"
